import os
Import('Env')

out_dir = os.path.join(Env['OUT_DIR_PATH'], 'psp')
if not os.path.exists(out_dir):
    os.makedirs(out_dir)

list_files_c=[
   [os.path.join('psp', 'src', 'psp_interrupts.c'), os.path.join(out_dir, 'psp_interrupts.o')],
   [os.path.join('psp', 'src', 'psp_traps.c'), os.path.join(out_dir, 'psp_traps.o')],
   [os.path.join('psp', 'src', 'psp_timer.c'), os.path.join(out_dir, 'psp_timer.o')],
]

list_files_a=[
   [os.path.join('psp', 'src', 'psp_int_vect.S'), os.path.join(out_dir, 'psp_int_vect.o')],
]

# compiler flags
c_flags = [] + Env['C_FLAGS']
a_flags = [] + Env['A_FLAGS']


# defines
c_defines = []+Env['PUBLIC_DEF'] + Env['RTOSAL_DEF']

# include paths
local_includes  = []
public_includes = [
  os.path.join(Env['ROOT_DIR'], 'psp', 'loc_inc'),
  os.path.join(Env['ROOT_DIR'], 'psp', 'api_inc'),
  os.path.join(Env['ROOT_DIR'], 'common', 'api_inc'),
  os.path.join(Env['ROOT_DIR'], 'rtos', 'rtos_core', 'freertos', 'Source', 'include'),
  os.path.join(Env['ROOT_DIR'], 'rtos', 'rtos_core', 'freertos', 'config', 'hifive-1'),
  os.path.join(Env['ROOT_DIR'], 'rtos', 'rtos_core', 'freertos', 'config', 'nexys_a7_swerv'),
  os.path.join(Env['ROOT_DIR'], 'rtos', 'rtosal', 'api_inc'),
  os.path.join(Env['ROOT_DIR'], 'psp', 'psp_specific', 'loc_inc'),
  os.path.join(Env['ROOT_DIR'], 'psp', 'psp_specific', 'api_inc'),
  os.path.join(Env['ROOT_DIR'], 'examples', 'demo'),
]
############################################################################################
# Define include path specific to the core in use
if 'D_RV_HI_FIVE1' in Env['PUBLIC_DEF']:
  public_includes += [
  os.path.join(Env['ROOT_DIR'], 'board', 'hifive-1', 'bsp', 'include', 'sifive'),
  os.path.join(Env['ROOT_DIR'], 'board', 'hifive-1', 'bsp', 'env'),
  os.path.join(Env['ROOT_DIR'], 'board', 'hifive-1', 'bsp', 'env', 'freedom-e300-hifive1'),
]
#[OS]: need to change thie, this is ugly ##[OS]: if this will keep beening here then we need new define
if 'D_RV_HI_FIVE1' in Env['PUBLIC_DEF']:  
  public_includes += [
  os.path.join(Env['ROOT_DIR'], 'board', 'nexys_a7_swerv', 'bsp', 'include', 'sifive'),
  os.path.join(Env['ROOT_DIR'], 'board', 'nexys_a7_swerv', 'bsp', 'env'),
  os.path.join(Env['ROOT_DIR'], 'board', 'nexys_a7_swerv', 'bsp', 'env', 'freedom-e300-hifive1'),
]
############################################################################################

include_paths = public_includes + local_includes

# linker flags
Env['LINKFLAGS'] += []

# for objects
objects = []
for list_file in list_files_c:
  objects.append(Env.Object(source=os.path.join(Env['ROOT_DIR'], list_file[0]), target=list_file[1], CPPPATH=include_paths, CCFLAGS=c_flags, CPPDEFINES=c_defines))

# asm file objects
for list_file in list_files_a:
  objects.append(Env.Object(source=os.path.join(Env['ROOT_DIR'], list_file[0]), target=list_file[1], CPPPATH=include_paths, CCFLAGS=a_flags, CPPDEFINES=c_defines))

# for libraries
psp_lib = Env.Library (target=os.path.join(Env['OUT_DIR_PATH'], 'libs', 'psp.a'), source=objects)

# return the psp lib
Return('psp_lib')
